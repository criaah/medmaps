                  {
                    "id": "57",
                    "parent": "54",
                    "text": "• Moderado-grave: Inconstante/constante",
                    "guid": "DPJUml2G6MhbyIK6Hlokrw",
                    "children": [
                      {
                        "id": "58",
                        "parent": "57",
