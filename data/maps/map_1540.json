                "children": [
                  {
                    "id": "46",
                    "parent": "45",
                    "text": "• Leve: <2 mm",
                    "guid": "FOnoTibmnyI0kFiXd5HKUA",
                    "children": []
                  },
                  {
                    "id": "47",
                    "parent": "45",
                    "text": "• Moderada-grave: ≥2 mm",
