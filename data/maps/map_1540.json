              {
                "id": "101",
                "parent": "99",
                "text": "Factores\nriesgo:",
                "guid": "PCpT9hB-QGxjDhg6RbQfRQ",
                "children": [
                  {
                    "id": "102",
                    "parent": "101",
                    "text": "• TRab >7.5-10 U/L (normal <1. 5) • Tabaquismo • Orbitopatía preexistente\n• Contraindicación: ODT grave",
                    "guid": "dV661zNHvLAb-duraIe6tA",
                    "children": []
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "103",
        "parent": "0",
        "text": "MANEJO ODT",
        "guid": "",
        "children": [
          {
            "id": "104",
            "parent": "103",
            "text": "CORTICOIDES + I131",
            "guid": "D6GI2Tr_bVNRK4oXMNU3OA",
            "children": [
              {
                "id": "105",
                "parent": "104",
                "text": "Prednisona 0.3-0.5 mg/kg/d:",
                "guid": "J40_UiQmVK8HZhBdHOv6KQ",
                "children": [
                  {
                    "id": "106",
                    "parent": "105",
                    "text": "Inicio: día 1 a 3 post-I131",
                    "guid": "NMFaWQ0N87Ro3ihaDfp7jw",
                    "children": []
                  },
                  {
                    "id": "107",
                    "parent": "105",
                    "text": "↓progresiva hasta suspender al 3er mes",
                    "guid": "CU3_GluBteN0dosBJzF_bw",
                    "children": []
                  }
                ]
              },
              {
                "id": "108",
                "parent": "104",
                "text": "Levotiroxina si post-I131\nSi T4 total <7 μg/dL",
                "guid": "BYedIhcO_uZBGDx1QbHxGA",
                "children": [
                  {
                    "id": "109",
                    "parent": "108",
                    "text": "Inicio: 50 μg/d a 3 sem",
                    "guid": "KCw9XS78zAlv7hQiFbsWeg",
                    "children": []
                  },
                  {
                    "id": "110",
                    "parent": "108",
                    "text": "Independiente de TSH",
                    "guid": "V6zb-w8leXQzyq_JZ05k1A",
                    "children": []
                  },
                  {
                    "id": "111",
                    "parent": "108",
                    "text": "Hipotiroidismo puede agravar la evolución de la ODT",
                    "guid": "UZVKR1eTucN8CvJEUT6pjA",
                    "children": []
                  }
                ]
              }
            ]
          },
          {
            "id": "112",
            "parent": "103",
            "text": "MEDIDAS\nGENERALES",
            "guid": "SiTmxwT2OeAYI5wNfuZBIA",
            "children": [
              {
                "id": "113",
                "parent": "112",
                "text": "• Suspender tabaco",
                "guid": "EgQtlAEBxGcM4LyvG1Isrg",
                "children": []
              },
              {
                "id": "114",
                "parent": "112",
                "text": "• Lentes oscuros → fotofobia",
                "guid": "XIN6SgFXR7BCg6wdBK-3pw",
                "children": []
              },
              {
                "id": "115",
                "parent": "112",
                "text": "• Lágrimas artificiales/gel → noches/mala oclusión",
                "guid": "MFQTuTJxwEAaas4hNduw2w",
                "children": []
              },
              {
                "id": "116",
                "parent": "112",
                "text": "• Parches oculares → lagoftalmo",
                "guid": "SYC_JluDCpZ3jaHzcQ3-eA",
                "children": []
              },
              {
                "id": "117",
                "parent": "112",
                "text": "• Prismas → diplopía",
                "guid": "f6lfRX7zslEN-fiiVxdwpA",
                "children": []
              }
            ]
          },
          {
            "id": "118",
            "parent": "103",
            "text": "ODT LEVE",
            "guid": "IlOeWhNtrYBmb4RcegB6VQ",
            "children": [
              {
                "id": "119",
                "parent": "118",
                "text": "• Solo observación + medidas generales",
                "guid": "IpMm9Bo6NCVhTt8qbLgNuw",
                "children": []
              },
              {
                "id": "120",
                "parent": "118",
                "text": "• Selenio: 100 μg/12h × 6 meses",
                "guid": "HzBuBXlyezdrnk7bMTSbmQ",
                "children": [
                  {
                    "id": "121",
                    "parent": "120",
                    "text": "Beneficios > placebo",
                    "guid": "enQ_nnh_C4pMhshIVve56A",
                    "children": []
                  },
                  {
                    "id": "122",
                    "parent": "120",
                    "text": "No estándar clínico actual",
                    "guid": "edZTOw8KdGVbp3GPKipm9A",
                    "children": []
                  }
                ]
              },
              {
                "id": "123",
                "parent": "118",
                "text": "• Si I131 → evaluar profilaxis corticoides",
                "guid": "QXw0pXYSP7BgBhfQCvzzyw",
                "children": []
              }
            ]
          },
          {
            "id": "124",
            "parent": "103",
            "text": "ODT Moderada-Grave + Activa\n(CAS ≥3)",
            "guid": "VPYY_nqwSjo02-GqFnJNow",
            "children": [
              {
                "id": "125",
                "parent": "124",
                "text": "A. Corticoides:",
                "guid": "cMKJ6hTh-Xohb0FvQlfUMQ",
                "children": [
                  {
                    "id": "126",
                    "parent": "125",
                    "text": "• VO: Prednisona 60 mg/d",
                    "guid": "",
                    "children": []
                  },
                  {
                    "id": "127",
                    "parent": "125",
                    "text": "• IV: Metilprednisolona (mejores resultados)",
                    "guid": "At4ScjG1Q2474knlUHrxlw",
                    "children": []
                  }
                ]
              },
              {
                "id": "128",
                "parent": "124",
                "text": "B. Esquemas IV",
                "guid": "bHWzPR16M7MTln2-Qv0fUg",
                "children": [
                  {
                    "id": "129",
                    "parent": "128",
                    "text": "• Ambulatorio:",
                    "guid": "",
                    "children": [
                      {
                        "id": "130",
                        "parent": "129",
                        "text": "• 500 mg/sem × 6 sem → 250 mg/sem × 6 sem",
                        "guid": "J38emTvsl-872CnARPG2_w",
                        "children": []
                      }
                    ]
                  },
                  {
                    "id": "131",
                    "parent": "128",
                    "text": "• Hospitalario:",
                    "guid": "",
                    "children": [
                      {
                        "id": "132",
                        "parent": "131",
                        "text": "• 1 g/60 min × 3 días consecutivos",
                        "guid": "SrI2fC6zroQE93ZZc7IJLg",
                        "children": []
                      }
                    ]
                  }
                ]
              },
              {
                "id": "133",
                "parent": "124",
                "text": "C. Consideraciones\nMetilprednisolona:",
                "guid": "ShFfXjVHJjUYjBBaWuyG2A",
                "children": [
                  {
                    "id": "134",
                    "parent": "133",
                    "text": "• Dosis acumulada máx: 8 g",
                    "guid": "ezLKzjeU6QVlngGOUCjjzA",
                    "children": []
                  },
                  {
                    "id": "135",
                    "parent": "133",
                    "text": "• Evaluar pre-tratamiento:",
                    "guid": "",
                    "children": [
                      {
                        "id": "136",
                        "parent": "135",
                        "text": "• Función hepática, PA, úlcera péptica, diabetes, glaucoma",
                        "guid": "MkUzPxp54zhmmzFvIwe9Kg",
                        "children": []
                      }
                    ]
                  },
                  {
                    "id": "137",
                    "parent": "133",
                    "text": "• Monitorización\nhospitalaria:",
                    "guid": "L1vcsggKct5lX5FbG9GP7w",
                    "children": [
                      {
                        "id": "138",
                        "parent": "137",
                        "text": "• Electrolitos/glucemia diaria",
                        "guid": "JYSmkXj2Dxlezq9BTQPFKg",
                        "children": []
                      },
                      {
                        "id": "139",
                        "parent": "137",
                        "text": "• Manifestaciones psiquiátricas",
                        "guid": "NOKnCBqm2QIR9Xwpf5TdhA",
                        "children": []
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "id": "140",
            "parent": "103",
            "text": "ODT Moderada-Grave + Inactiva\n(CAS <3)",
            "guid": "SVqHhhbs8oJzRuayTDiZ-Q",
            "children": [
              {
                "id": "141",
                "parent": "140",
                "text": "• Inactividad >6 meses",
                "guid": "",
                "children": []
              },
              {
                "id": "142",
                "parent": "140",
                "text": "• Tto quirúrgico\nreconstructivo:",
                "guid": "SKI18C8pMJccs4uQErOVTg",
                "children": [
                  {
                    "id": "143",
                    "parent": "142",
                    "text": "• Descompresión orbital",
                    "guid": "ZHBWzTU_m-ttoBwnX6Mhmw",
                    "children": []
                  },
                  {
                    "id": "144",
                    "parent": "142",
                    "text": "• Corrección retracción palpebral",
                    "guid": "bNSE8FM-HbUvzAVnHxm4MA",
                    "children": []
                  },
                  {
                    "id": "145",
                    "parent": "142",
                    "text": "• Blefaroplastia",
                    "guid": "bbgA7RZnNtZCIXVaHRPdnw",
                    "children": []
                  },
                  {
                    "id": "146",
                    "parent": "142",
                    "text": "• Corrección estrabismo",
                    "guid": "HnGptSeBBrU45W2OQ_ZQRg",
                    "children": []
                  }
                ]
              }
            ]
          },
          {
            "id": "147",
            "parent": "103",
            "text": "Neuropatía\nÓptica",
            "guid": "Mlr10iLvkZpU7ppce7V9WA",
            "children": [
              {
                "id": "148",
                "parent": "147",
                "text": "Corticoides\nSistémicos:",
                "guid": "OdyEHUg1gQ5H7hdRAn66DQ",
                "children": [
                  {
                    "id": "149",
                    "parent": "148",
                    "text": "• Metilprednisolona: 1 g IV/30-60 min × 3 días",
                    "guid": "d16xpmShouIVMk9cW88Icw",
                    "children": []
                  },
                  {
                    "id": "150",
                    "parent": "148",
                    "text": "• Mejoría\n(2 sem):",
                    "guid": "F_cHUloxZP9fhmVNUdOLbw",
                    "children": [
                      {
                        "id": "151",
                        "parent": "150",
                        "text": "• Prednisona VO:",
                        "guid": "GeE-zQLSa4M7cioOBrXDvQ",
                        "children": [
                          {
                            "id": "152",
                            "parent": "151",
                            "text": "• 40 mg/d × 2 sem →",
                            "guid": "VhCJOGs-L3Ulz3vtQ8iKJQ",
                            "children": []
                          },
                          {
                            "id": "153",
                            "parent": "151",
                            "text": "• 30 mg/d × 4 sem →",
                            "guid": "AaVmS2fw8Udg3GfEIBcQAA",
                            "children": []
                          },
                          {
                            "id": "154",
                            "parent": "151",
                            "text": "• 20 mg/d × 4 sem → ↓ progresiva hasta suspender",
                            "guid": "D3H3_RnB1VJkDWBHL-kNzA",
                            "children": []
                          }
                        ]
                      },
                      {
                        "id": "155",
                        "parent": "150",
                        "text": "• Sin respuesta: Cirugía descompresiva",
                        "guid": "MXXyInUHdbgFQsqjY9Dn9A",
                        "children": []
                      }
                    ]
                  }
                ]
              },
              {
                "id": "156",
                "parent": "147",
                "text": "Radioterapia",
                "guid": "ImbmDid0fJ5UUkV9GcWXtA",
                "children": [
                  {
                    "id": "157",
                    "parent": "156",
                    "text": "• Indicaciones:",
                    "guid": "",
                    "children": [
                      {
                        "id": "158",
                        "parent": "157",
                        "text": "• Útil en combinación con corticoides",
                        "guid": "DBYfgGmElNl1lKAnJfdeTQ",
                        "children": []
                      },
                      {
                        "id": "159",
                        "parent": "157",
                        "text": "• Especialmente en compromiso músculos extraoculares",
                        "guid": "bFcAXDEGyjUsrSILQmeJlA",
                        "children": []
                      }
                    ]
                  },
                  {
                    "id": "160",
                    "parent": "156",
                    "text": "• Contraindicaciones:",
                    "guid": "",
                    "children": [
                      {
                        "id": "161",
                        "parent": "160",
                        "text": "• Retinopatía diabética",
                        "guid": "HET5qlJ8nfgGMBO5Hepf9Q",
                        "children": []
                      },
                      {
                        "id": "162",
                        "parent": "160",
                        "text": "• Retinopatía hipertensiva grave",
                        "guid": "Om2PQGcMe30-AW_2Sd-HPQ",
                        "children": []
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
